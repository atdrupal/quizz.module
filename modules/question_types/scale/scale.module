<?php

require_once dirname(__FILE__) . '/scale.hooks.inc';

/**
 * Access callback for scale_collection entity.
 * @param string $op
 * @param \Drupal\scale\Entity\Collection $collection
 * @param stdClass $account
 * @return bool
 */
function scale_collection_access_callback($op, $collection = NULL, $account = NULL) {
  return user_access('Edit global presets', $account);
}
